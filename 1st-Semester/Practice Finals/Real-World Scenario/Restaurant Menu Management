menu_items = []

def add_item(name, price, description, category):
    menu_items.append({"name": name, "price": price, "description": description, "category": category})
    print("Item added successfully.")

def remove_item(name):
    global menu_items
    menu_items = [item for item in menu_items if item["name"] != name]
    print("Item removed successfully.")

def update_item(name, price, description, category):
    for item in menu_items:
        if item["name"] == name:
            item.update({"price": price, "description": description, "category": category})
            print("Item updated successfully.")
            return
    print("Item not found in the menu.")

def display_menu():
    print("Menu is empty." if not menu_items else "Menu:\n" + "\n".join(f"{i+1}. {item['name']}, ${item['price']}, {item['description']}, {item['category']}" for i, item in enumerate(menu_items)))

def menu():
    while True:
        print("1. Add, 2. Remove, 3. Update, 4. View, 5. Exit")
        choice = input("Enter your choice: ")
        if choice == "1":
            add_item(input("Enter Name: "), input("Enter Price: "), input("Enter Description: "), input("Enter Category: "))
        elif choice == "2":
            remove_item(input("Enter Name to remove: "))
        elif choice == "3":
            update_item(input("Enter Name to update: "), input("Enter new Price: "), input("Enter new Description: "), input("Enter new Category: "))
        elif choice == "4":
            display_menu()
        elif choice == "5":
            break
        else:
            print("Invalid choice.")

menu()
